{% for item in collections.sections %}
  {% if item.data.type === 'faq' %}
    <div id="faq" class="w-full min-h-screen flex flex-col justify-center items-center bg-darkred py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="tracking-wide text-white font-bold text-4xl mb-4">Poznaj nasze możliwości</h2>
        <div class="font-light text-gray-200 text-xl mb-6">
          Kompletny system do monitorowania zagrożeń pożarowych
        </div>
      </div>
      <div class=" w-full xl:w-4/5 flex flex-col flex-wrap px-4 xl:px:0">
        {% for item in faq %}
          <div class="w-full flex justify-center hover:shadow-lg hover:bg-hoverred hover:bg-opacity-50 px-4 sm:px-8 py-6 sm:py-12">
            <div class="w-2/3 xl:w-3/4">
              <h3 class="tracking-wide text-white font-bold text-2xl uppercase mb-2">{{ item.question }}</h3>
              <div class="font-light text-gray-200 text-lg">
                {{ item.answer | markdown | safe }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="self-center text-center w-full sm:w-1/3 px-4 sm:px:0">
        <h3 class="font-bold tracking-widest text-white text-2xl my-6">{{ item.data.afterTitle }}</h3>
      </div>
    </div>
  {% endif %}
{% endfor %}